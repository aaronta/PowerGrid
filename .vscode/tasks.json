{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start develop env",
            "type": "shell",
            "command": "docker-compose -f ./docker/develop-compose.yml run --name devenv dev-image bash",
            "problemMatcher": []
        },
        {
            "label": "stop develop env",
            "type": "shell",
            "command": "docker-compose -f ./docker/develop-compose.yml down",
            "problemMatcher": []
        },
        {
            "label": "start develop MPI env",
            "type": "shell",
            "command": "docker-compose -f ./docker/develop-mpi-compose.yml run --name devmpienv dev-mpi-image bash",
            "problemMatcher": []
        },
        {
            "label": "stop develop MPI env",
            "type": "shell",
            "command": "docker-compose -f ./docker/develop-mpi-compose.yml down",
            "problemMatcher": []
        },
        {
            "label": "start prod env",
            "type": "shell",
            "command": "docker-compose -f ./docker/prod-compose.yml run --name prodenv prod-image bash",
            "problemMatcher": []
        },
        {
            "label": "stop prod env",
            "type": "shell",
            "command": "docker-compose -f ./docker/prod-compose.yml down",
            "problemMatcher": []
        },
        {
            "label": "start prod MPI env",
            "type": "shell",
            "command": "docker-compose -f ./docker/prod-mpi-compose.yml run --name prodmpienv prod-mpi-image bash",
            "problemMatcher": []
        },
        {
            "label": "stop prod MPI env",
            "type": "shell",
            "command": "docker-compose -f ./docker/prod-mpi-compose.yml down",
            "problemMatcher": []
        },
        {
            "label": "cmake generate",
            "type": "shell",
            "command": "docker exec -it devenv cmake .",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "command": "docker exec -it devenv make",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "docker exec -it devenv make clean",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build develop image",
            "type": "shell",
            "command": "cd docker; docker build -t powergrid-dev powergrid-dev",
            "problemMatcher": []
        },
        {
            "label": "build develop MPI image",
            "type": "shell",
            "command": "cd docker; docker build -t powergrid-bw-dev powergrid-bw-dev",
            "problemMatcher": []
        },
        {
            "label": "build prod image",
            "type": "shell",
            "command": "cd docker; docker build -t powergrid powergrid",
            "problemMatcher": []
        },
        {
            "label": "build prod MPI image",
            "type": "shell",
            "command": "cd docker; docker build -t powergrid-bw powergrid-bw",
            "problemMatcher": []
        }
    ]
}